  class Form_AvionVueltaPremium {
    - btnAsientos[24] : JButton
    - btnRegresar : JButton
    - btnSiguiente : JButton
    - jScrollPane1 : JScrollPane
    - jPanel1 : JPanel
    + seleccionarAsiento(numero: int)
    + continuar()
    + regresar()
  }

  ' ==== HERENCIA PARA ASIENTOS ====
  abstract class Form_AsientosBase {
    - btnAsientos[n] : JButton
    - txtNumeroAsiento : JTextField
    - btnRegresar : JButton
    + seleccionarAsiento(codigo: String)
    + mostrarNumeroAsiento()
    + regresar()
  }

  class Form_AsientoIdaPremium {
    - btnSiguiente : JButton
    + continuar()
  }

  class Form_AsientosVueloEconomy {
    - btnRegistrarDatos : JButton
