  Form_AsientoIdaPremium --|> Form_AsientosBase
  Form_AsientosVueloEconomy --|> Form_AsientosBase

  class Form_DatosPagar {
    - txtNombre : JTextField
    - txtDocumentoID : JTextField
    - txtCorreo : JTextField
    - txtTelefono : JTextField
    - txtNumeroTarjeta : JTextField
    - txtCVI : JTextField
    - txtVuelo : JTextField
    - txtAsientoIda : JTextField
    - txtAsientoVuelta : JTextField
    - txtPrecio : JTextField
    - btnRegresar : JButton
    - btnPagar : JButton
    + cargarDatos()
    + validarDatos()
    + procesarPago()
    + regresar()
  }
}

' =========================
' PAQUETE MODELO
' =========================
package modelo {

  class Asiento {
    - numero : int
    - tipo : String
    - ocupado : boolean
    + Asiento(numero: int, tipo: String)
    + getNumero() : int
    + getTipo() : String
    + isOcupado() : boolean
    + ocupar() : void
  }

  class Avion {
    - codigo : String
    - modelo : String
    - capacidadEconomy : int
    - capacidadPremium : int
    + Avion(codigo: String, modelo: String, capacidadEconomy: int, capacidadPremium: int)
    + getCodigo() : String
    + getModelo() : String
    + getCapacidadEconomy() : int
    + getCapacidadPremium() : int
  }

  class Cliente {
    - cedula : String
    - nombres : String
    - apellidos : String
    - correo : String
    + Cliente(cedula: String, nombres: String, apellidos: String, correo: String)
    + getCedula() : String
    + getNombres() : String
    + getApellidos() : String
    + getCorreo() : String
  }

  class Pasaje {
    - numero : String
    - reserva : Reserva
    - precioFinal : double
    + Pasaje(numero: String, reserva: Reserva, precioFinal: double)
    + getNumero() : String
    + getReserva() : Reserva
    + getPrecioFinal() : double
  }

  class Reserva {
    - codigo : String
    - cliente : Cliente
    - vuelo : Vuelo
    - tipoAsiento : String
    + Reserva(codigo: String, cliente: Cliente, vuelo: Vuelo, tipoAsiento: String)
    + getCodigo() : String
    + getCliente() : Cliente
    + getVuelo() : Vuelo
    + getTipoAsiento() : String
  }

  class Ruta {
    - codigo : String
    - origen : String
    - destino : String
    - duracionMinutos : int
    + Ruta(codigo: String, origen: String, destino: String, duracionMinutos: int)
    + getCodigo() : String
    + getOrigen() : String
    + getDestino() : String
    + getDuracionMinutos() : int
  }

  class Vuelo {
    - codigo : String
    - ruta : Ruta
    - avion : Avion
    - fecha : String
    - precioEconomy : double
    - precioPremium : double
    + Vuelo(codigo: String, ruta: Ruta, avion: Avion, fecha: String, precioEconomy: double, precioPremium: double)
    + getCodigo() : String
    + getRuta() : Ruta
    + getAvion() : Avion
    + getFecha() : String
    + getPrecioEconomy() : double
    + getPrecioPremium() : double
  }

  ' ==== RELACIONES ENTRE CLASES ====
  Reserva --> Cliente
  Reserva --> Vuelo
  Pasaje --> Reserva
  Vuelo --> Ruta
  Vuelo --> Avion
  Avion --> Asiento
}

' =========================
' PAQUETE UTIL
' =========================
